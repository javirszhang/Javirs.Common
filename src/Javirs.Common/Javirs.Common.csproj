    <Product Condition="'$(TargetFramework)' == 'netstandard2.0'">Javirs.Common-netstandard2.0</Product>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <PackageReference Include="Microsoft.AspNet.Mvc" Version="4.0.20710" />
